<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmitrij.doberstein.spritfuchs"
    android:versionCode="1"
    android:versionName="1.0" >

    <permission
        android:name="com.dmitrij.doberstein.spritfuchs.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.dmitrij.doberstein.spritfuchs.permission.MAPS_RECEIVE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- for GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- for wifi -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- uses-permission android:name="android.permission.UPDATE_DEVICE_STATS" / -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- end -->

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!-- External storage for caching. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- My Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Maps API needs OpenGL ES 2.0. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <!-- End of copy. -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.MainActivityMenu"
            android:label="@string/title_activity_main_activity_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.StartpageActivity"
            android:label="@string/title_activity_startpage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.VergleichActivity"
            android:label="@string/title_activity_vergleich"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.InfoActivity"
            android:label="@string/title_activity_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.ConfActivity"
            android:label="@string/title_activity_conf"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.VergleichListeActivity"
            android:label="@string/title_activity_vergleich_liste" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.VergleichMapActivity"
            android:label="@string/title_activity_vergleich_map" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.dmitrij.doberstein.spritfuchs.VergleichActivityListDetail"
            android:label="@string/title_activity_vergleich_activity_list_detail" >
        </activity>
    </application>

</manifest>
